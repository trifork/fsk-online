{
    "exclude": [
        "node_modules",
        "target",
        "typings/browser",
        "typings/browser.d.ts",
        "typings/main",
        "detect-browser"
    ],
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "ES2021",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "experimentalDecorators": true,
        "noImplicitOverride": true,
        "downlevelIteration": true,
        "lib": [
            "dom",
            "ES2023"
        ]
    },
    "atom": {
        "rewriteTsconfig": true
    },
    "compileOnSave": false
}
