{
  "version": "4.0.2",
  "exclude": [
    "node_modules",
    "target",
    "typings/browser",
    "typings/browser.d.ts",
    "typings/main"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "lib": [
      "dom", "es2018"
    ]
  },
  "atom": {
    "rewriteTsconfig": true
  },
  "compileOnSave": false
}
